<?xml version="1.0" encoding="utf-8"?>
<it.giccisw.util.introscreen.parallax.ParallaxLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                                           xmlns:tools="http://schemas.android.com/tools"
                                                           android:id="@+id/mis_slide_background"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="match_parent"
                                                           android:layout_marginTop="16dp"
                                                           android:baselineAligned="false"
                                                           android:clipToPadding="false"
                                                           android:fitsSystemWindows="false"
                                                           android:padding="16dp">

    <ImageView
        android:id="@+id/mis_image_slide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="128dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:paddingTop="32dp"
        android:visibility="gone"
        app:mis_layout_parallaxFactor="0.6"
        tools:src="@android:drawable/arrow_down_float"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mis_txt_title_slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="Lorem ipsum" />

        <TextView
            android:id="@+id/mis_txt_description_slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Lorem ipsum dolor sit amet, consectetur, adipisci velit, â€¦" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mis_button_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:theme="@style/Widget.ColoredButton"
            android:visibility="invisible"
            tools:text="Message btn" />

    </LinearLayout>
</it.giccisw.util.introscreen.parallax.ParallaxLinearLayout>
